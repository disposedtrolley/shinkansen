{
	"name": "shinkansen",
	"displayName": "Shinkansen",
	"description": "High-speed development",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:python"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "shinkansen.evaluate",
				"title": "Shinkansen: Evaluate"
			}
		],
		"keybindings": [
			{
				"command": "shinkansen.evaluate",
				"key": "ctrl+enter",
				"mac": "cmd+enter",
				"when": "editorTextFocus"
			}
        ],
        "configuration": {
            "type": "object",
            "properties": {
                "shinkansenPython.trace.server": {
                    "type": "string",
                    "enum": [
                      "off",
                      "messages",
                      "verbose"
                    ],
                    "default": "verbose"
                },
                "shinkansenPython.completion": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable completion feature"
                },
                "shinkansenPython.hover": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable hover feature"
                }
            }
        }
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js",
		"interpreter:python:server": "python3 ./src/interpreters/python/server.py",
		"interpreter:python:client": "node ./src/interpreters/python/client.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"vscode-languageclient": "^6.1.3"
	}
}
